<div class="container">
    <div class="jumbotron">
        <h1 class="text-center">Burger Time!</h1>
    </div>
</div>

<div class="container">
    <h2 class="text-center">Burgers that are ready to eat!</h2>
    <hr>
    <ul class="text-center">
    {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/unless}}
    {{/each}}
    </ul>
    <hr>
</div>

<div class="container">
    <h2 class="text-center">Burgers that have been devoured!</h2>
    <hr>
    <ul class="text-center">
    {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/if}}
    {{/each}}
    </ul>
    <hr>
</div>

<div class="container">
    <h2 class="text-center">Add a Burger</h2>
    <form class="create-form text-center">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    {{!-- <div class="form-group">
        <label for="sleepy">Sleepy?</label><br>
        <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
        <input type="radio" name="sleepy" value="0"> Awake
    </div> --}}

    <button class="btn btn-sm btn-success" type="submit">Add Burger</button>
    </form>
</div>
